<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a number"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#111" />
    </RelativeLayout>

    <!--second row-->
    <RelativeLayout
        android:id="@+id/secondRow"
        android:layout_below="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <Button
            android:id="@+id/btn7"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"
            android:onClick="buttonPress"/>
        <Button
            android:id="@+id/btn8"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"
            android:onClick="buttonPress"/>
        <Button
            android:id="@+id/btn9"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"
            android:onClick="buttonPress"/>
        <Button
            android:id="@+id/btnPlus"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"
            android:backgroundTint="#CC2828"
            android:onClick="buttonPress"/>
    </RelativeLayout>

    <!--third row-->
    <RelativeLayout
        android:id="@+id/thirdRow"
        android:layout_below="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <Button
            android:id="@+id/btn4"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"
            android:onClick="buttonPress"/>
        <Button
            android:id="@+id/btn5"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"
            android:onClick="buttonPress"/>
        <Button
            android:id="@+id/btn6"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"
            android:onClick="buttonPress"/>
        <Button
            android:id="@+id/btnMin"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"
            android:backgroundTint="#CC2828"
            android:onClick="buttonPress"/>
    </RelativeLayout>

    <!--forth row-->
    <RelativeLayout
        android:id="@+id/forthRow"
        android:layout_below="@+id/thirdRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <Button
            android:id="@+id/btn1"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"
            android:onClick="buttonPress"/>
        <Button
            android:id="@+id/btn2"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"
            android:onClick="buttonPress"/>
        <Button
            android:id="@+id/btn3"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"
            android:onClick="buttonPress"/>
        <Button
            android:id="@+id/btnMul"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"
            android:backgroundTint="#CC2828"
            android:onClick="buttonPress"/>
    </RelativeLayout>

    <!--fifth row-->
    <RelativeLayout
        android:id="@+id/fifthRow"
        android:layout_below="@+id/forthRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <Button
            android:id="@+id/btnDot"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/btn0"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/btnDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"
            android:onClick="buttonPress"/>
        <Button
            android:id="@+id/btnAc"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ac"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/btnDiv"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/btnAc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"
            android:backgroundTint="#CC2828"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btnResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fifthRow"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#CC2828"
        android:padding="10dp"
        android:text="="
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnDel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fifthRow"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="50dp"
        android:layout_toStartOf="@+id/btnResult"
        android:backgroundTint="#CC2828"
        android:padding="10dp"
        android:text="Del"
        android:textSize="40sp" />


</RelativeLayout>